<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_img"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/steak"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/close_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/product_name_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxLines="1"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/close_btn"
            app:layout_constraintStart_toEndOf="@id/product_img"
            app:layout_constraintTop_toBottomOf="@id/close_btn"
            tools:text="California Orange 8 Pcs" />

        <TextView
            android:id="@+id/original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/khand_semibold"
            android:textColor="@color/appTheme"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/product_img"
            app:layout_constraintTop_toBottomOf="@id/product_name_tv"
            tools:text="$349.0" />

        <TextView
            android:id="@+id/discount_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/khand"
            android:textColor="#AEAEAE"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/original_price"
            app:layout_constraintStart_toEndOf="@id/original_price"
            app:layout_constraintTop_toTopOf="@id/original_price"
            app:layout_constraintVertical_bias="0"
            tools:text="$699.0" />

        <TextView
            android:id="@+id/quantity_tv"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/round_corner_with_stroke"
            android:gravity="center"
            android:padding="5dp"
            android:text="5"
            android:textColor="#A9AABF"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/original_price"
            app:layout_constraintTop_toBottomOf="@id/original_price"
            app:layout_constraintHorizontal_bias="0"/>

        <TextView
            android:id="@+id/quantity_remove_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_cart_btn"
            android:contentDescription="@string/quantity_plus"
            android:elevation="8dp"
            android:paddingStart="7dp"
            app:drawableStartCompat="@drawable/ic_remove_btn"
            app:layout_constraintBottom_toBottomOf="@id/quantity_tv"
            app:layout_constraintStart_toStartOf="@id/quantity_tv"
            app:layout_constraintTop_toTopOf="@id/quantity_tv"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/quantity_add_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_cart_btn"
            android:contentDescription="@string/quantity_plus"
            android:elevation="8dp"
            android:paddingStart="8dp"
            app:drawableStartCompat="@drawable/ic_add_btn"
            app:layout_constraintBottom_toBottomOf="@id/quantity_tv"
            app:layout_constraintEnd_toEndOf="@id/quantity_tv"
            app:layout_constraintTop_toTopOf="@id/quantity_tv"
            tools:ignore="RtlSymmetry" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>