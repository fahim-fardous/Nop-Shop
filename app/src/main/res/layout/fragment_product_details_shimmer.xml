<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screen.product.details.ProductDetailsFragment">

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/product_img1"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:background="@color/shimmerColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHeight_percent=".45"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                />

            <TextView
                android:id="@+id/product_title_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/product_img1"
                tools:text="Furniture Sofa" />

            <TextView
                android:id="@+id/product_subtitle_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="@font/lato"
                android:textColor="@color/shimmerColor"
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:background="@color/shimmerColor"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/product_title_tv1"
                app:layout_constraintTop_toBottomOf="@id/product_title_tv1"
                tools:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry." />

            <TextView
                android:id="@+id/discount_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/product_subtitle_tv1"
                app:layout_constraintTop_toBottomOf="@id/product_subtitle_tv1"
                tools:text="$349.0" />

            <TextView
                android:id="@+id/original_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:fontFamily="@font/lato_bold"
                android:background="@color/shimmerColor"
                android:textColor="@color/shimmerColor"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/discount_price1"
                app:layout_constraintStart_toEndOf="@id/discount_price1"
                app:layout_constraintTop_toTopOf="@id/discount_price1"
                app:layout_constraintVertical_bias="0"
                tools:text="$699.0" />

            <TextView
                android:id="@+id/availability_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato"
                android:text="Availability"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="@id/discount_price1"
                app:layout_constraintTop_toBottomOf="@id/discount_price1" />

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_11"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@id/product_subtitle_tv1"
                app:layout_constraintStart_toStartOf="@id/availability_title1"
                app:layout_constraintTop_toBottomOf="@id/availability_title1" />

            <TextView
                android:id="@+id/stock_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="@id/availability_title1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias=".22"
                app:layout_constraintStart_toEndOf="@id/availability_title1"
                app:layout_constraintTop_toTopOf="@id/availability_title1"
                tools:text="In stock" />
            <TextView
                android:id="@+id/description_tv1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/lato"
                android:text="@string/description"
                android:textColor="@color/shimmerColor"
                android:background="@color/shimmerColor"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="@id/divider_11"
                app:layout_constraintStart_toStartOf="@id/divider_11"
                app:layout_constraintTop_toBottomOf="@id/divider_11" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>