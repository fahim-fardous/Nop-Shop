<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:elevation="8dp"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/product_img1"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/shimmerColor"/>

        <ImageView
            android:id="@+id/close_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/product_name_tv1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/lato_bold"
            android:maxLines="1"
            android:textColor="@color/shimmerColor"
            android:background="@color/shimmerColor"
            android:textSize="15sp"
            app:layout_constraintEnd_toStartOf="@id/close_btn1"
            app:layout_constraintStart_toEndOf="@id/product_img1"
            app:layout_constraintTop_toBottomOf="@id/close_btn1"
            tools:text="California Orange 8 Pcs" />

        <TextView
            android:id="@+id/original_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/khand_semibold"
            android:textColor="@color/shimmerColor"
            android:background="@color/shimmerColor"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/product_img1"
            app:layout_constraintTop_toBottomOf="@id/product_name_tv1"
            tools:text="$349.0" />

        <TextView
            android:id="@+id/discount_price1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/khand"
            android:textColor="@color/shimmerColor"
            android:background="@color/shimmerColor"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/original_price1"
            app:layout_constraintStart_toEndOf="@id/original_price1"
            app:layout_constraintTop_toTopOf="@id/original_price1"
            app:layout_constraintVertical_bias="0"
            tools:text="$699.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>